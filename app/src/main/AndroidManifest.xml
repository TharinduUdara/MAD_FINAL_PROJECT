<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.emslite">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.emslite.EmployeeEditActivity" />
        <activity android:name="com.example.emslite.DepartmentEmployeeActivity" />
        <activity android:name="com.example.emslite.LogInActivity" />
        <activity android:name="com.example.emslite.SignUpActivity" />
        <activity android:name="com.example.emslite.WelcomeActivity" />
        <activity
            android:name="com.example.emslite.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.emslite.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>